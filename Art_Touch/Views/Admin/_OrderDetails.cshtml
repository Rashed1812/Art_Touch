@model DAL.Data.Models.Order

<div class="row">
    <div class="col-md-6">
        <h6>Order Information</h6>
        <table class="table table-sm">
            <tr>
                <td><strong>Order ID:</strong></td>
                <td>#@Model.Id</td>
            </tr>
            <tr>
                <td><strong>Order Date:</strong></td>
                <td>@Model.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
            </tr>
            <tr>
                <td><strong>Status:</strong></td>
                <td>
                    <span class="badge badge-@(Model.Status switch {
                        DAL.Data.Models.OrderStatus.Pending => "warning",
                        DAL.Data.Models.OrderStatus.Shipped => "info",
                        DAL.Data.Models.OrderStatus.Completed => "success",
                        DAL.Data.Models.OrderStatus.Cancelled => "danger",
                        _ => "secondary"
                    })">
                        @Model.Status
                    </span>
                </td>
            </tr>
            <tr>
                <td><strong>Total Amount:</strong></td>
                <td>$@Model.TotalAmount.ToString("F2")</td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        <h6>Customer Information</h6>
        <table class="table table-sm">
            <tr>
                <td><strong>Name:</strong></td>
                <td>@Model.User?.FirstName @Model.User?.LastName</td>
            </tr>
            <tr>
                <td><strong>Email:</strong></td>
                <td>@Model.User?.Email</td>
            </tr>
            <tr>
                <td><strong>Phone:</strong></td>
                <td>@Model.User?.PhoneNumber</td>
            </tr>
        </table>
        
        <h6>Shipping Address</h6>
        <p class="text-muted">@Model.ShippingAddress</p>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <h6>Order Items</h6>
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 80px;">Image</th>
                        <th>Product</th>
                        <th>Size</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @{
                                    var coverImage = item.Product?.Images?.FirstOrDefault(i => i.IsCover);
                                    var anyImage = item.Product?.Images?.FirstOrDefault(); // Fallback to any image
                                    var imageToShow = coverImage ?? anyImage;
                                }
                                @if (imageToShow != null)
                                {
                                    <img src="@imageToShow.ImageUrl" 
                                         class="img-fluid rounded" 
                                         style="width: 60px; height: 60px; object-fit: cover; border: 1px solid #dee2e6;" 
                                         onerror="this.src='/images/placeholder-dress.jpg'; this.onerror=null;"
                                         alt="@item.Product?.Name"
                                         title="@item.Product?.Name" />
                                    @if (coverImage == null && anyImage != null)
                                    {
                                        <small class="text-info d-block" style="font-size: 0.7em;">Gallery img</small>
                                    }
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center rounded" 
                                         style="width: 60px; height: 60px; border: 1px solid #dee2e6; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
                                        <i class="fas fa-image text-muted"></i>
                                    </div>
                                    <small class="text-muted d-block" style="font-size: 0.7em;">No image</small>
                                }
                            </td>
                            <td>
                                <div>
                                    <strong>@item.Product?.Name</strong>
                                    @if (!string.IsNullOrEmpty(item.Product?.Description))
                                    {
                                        <br />
                                        <small class="text-muted">@(item.Product.Description.Length > 40 ? item.Product.Description.Substring(0, 40) + "..." : item.Product.Description)</small>
                                    }
                                </div>
                            </td>
                            <td>
                                <span class="badge badge-primary" style="font-size: 0.9em;">
                                    @item.Size
                                </span>
                            </td>
                            <td>
                                <span class="badge badge-info" style="font-size: 0.9em;">
                                    @item.Quantity pieces
                                </span>
                            </td>
                            <td>$@item.UnitPrice.ToString("F2")</td>
                            <td><strong>$@item.Price.ToString("F2")</strong></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" class="text-right"><strong>Total:</strong></td>
                        <td><strong>$@Model.TotalAmount.ToString("F2")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div> 